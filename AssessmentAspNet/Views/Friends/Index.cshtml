@model IEnumerable<AssessmentAspNet.Models.FriendViewModel>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <br />
    <br />

    <p>
        @Html.ActionLink("Adicionar pessoa", "Create")
    </p>
    <p>
        @Html.ActionLink("Pesquisar pessoas", "Buscar")
    </p>

    <br />
    <br />

    <h1>Lista Ordenada</h1>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(Model => Model.Id)
            </th>

            <th>
                @Html.DisplayNameFor(Model => Model.FristName)
            </th>

            <th>
                @Html.DisplayNameFor(Model => Model.LastName)
            </th>

            <th>
                Nascimento
            </th>

        </tr>

        @foreach (var friend in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => friend.Id)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => friend.FristName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => friend.LastName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => friend.BirthDate)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = friend.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = friend.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = friend.Id })
                </td>
            </tr>
        }

    </table>

</body>
</html>